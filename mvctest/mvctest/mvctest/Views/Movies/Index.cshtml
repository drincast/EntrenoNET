@model IEnumerable<mvctest.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <div>no hay ninguna pelicula</div>
}
else
{
    <lu>
        @foreach (var item in Model)
        {
            <li>
                <div>id: @item.id</div>
                <div>nombre: @item.name</div>
            </li>
        }
    </lu>
}
